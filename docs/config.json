{
    "version": "1.0.0",
    "metadata": {
        "name": "Performance Test Configuration",
        "description": "Dynamic configuration for load testing scenarios",
        "updated": "2026-01-02"
    },
    "loadConfig": {
        "smoke": {
            "label": "Smoke Test",
            "description": "Quick validation test with minimal load",
            "ramp": 60,
            "users": 5,
            "duration": 360,
            "minPause": 1,
            "maxPause": 3
        },
        "longevity": {
            "label": "Longevity Test",
            "description": "Extended duration test for stability",
            "ramp": 300,
            "users": 10,
            "duration": 28000,
            "minPause": 1,
            "maxPause": 3
        },
        "capacity": {
            "label": "Capacity Test",
            "description": "High load test to determine system limits",
            "ramp": 3300,
            "users": 100,
            "duration": 3600,
            "warmupRamp": 1,
            "warmupUsers": 1,
            "warmupDuration": 60,
            "minPause": 1,
            "maxPause": 3
        }
    },
    "environment": {
        "sandbox": {
            "label": "Sandbox",
            "urls": [
                "https://example-sandbox.com",
                "https://domain-sandbox.com",
                "https://api-ecomm.gatling.io"
            ]
        },
        "stage": {
            "label": "Stage",
            "urls": [
                "https://example-stage.com",
                "https://domain-stage.com",
                "https://api-ecomm.gatling.io"
            ]
        },
        "production": {
            "label": "Production",
            "urls": [
                "https://example-prod.com",
                "https://domain.com",
                "https://api-ecomm.gatling.io"
            ],
            "warning": "⚠️ You are targeting PRODUCTION environment!"
        }
    },
    "scenarioConfig": {
        "project.scenario.ScenarioName": {
            "label": "Scenario Name",
            "description": "Main scenario with cache and cookie options",
            "fields": {
                "cookies_deny": false,
                "use_cache": true,
                "TEST_PAYLOAD": true
            }
        },
        "project.scenario.ScenarioOther": {
            "label": "Scenario Other",
            "description": "Alternative scenario with custom parameters",
            "fields": {
                "custom_string_param": "default value",
                "custom_digit_param": 10,
                "use_cache": true
            }
        },
        "project.scenario.ScenarioNoAdditionalFields": {
            "label": "Scenario No Additional Fields",
            "description": "Simple scenario without extra configuration",
            "fields": {}
        },
        "com.boilerplate.gatling.scenario.ExampleScenario": {
            "label": "ExampleScenario",
            "description": "Example scenario for gatling-ez",
            "fields": {
                "testBoolean": true,
                 "use_cache": true
            }
        }
    },
    "fieldMetadata": {
        "ramp": {
            "label": "Ramp-Up Time",
            "unit": "seconds",
            "help": "Time to gradually reach target user count"
        },
        "users": {
            "label": "Virtual Users",
            "unit": "concurrent users",
            "help": "Number of simultaneous users to simulate"
        },
        "duration": {
            "label": "Test Duration",
            "unit": "seconds",
            "help": "How long the test should run"
        },
        "minPause": {
            "label": "Min Pause",
            "unit": "seconds",
            "help": "Minimum wait time between requests"
        },
        "maxPause": {
            "label": "Max Pause",
            "unit": "seconds",
            "help": "Maximum wait time between requests"
        },
        "warmupRamp": {
            "label": "Warmup Ramp",
            "unit": "seconds",
            "help": "Ramp-up time for warmup phase"
        },
        "warmupUsers": {
            "label": "Warmup Users",
            "unit": "users",
            "help": "Number of users during warmup"
        },
        "warmupDuration": {
            "label": "Warmup Duration",
            "unit": "seconds",
            "help": "Duration of warmup phase"
        },
        "cookies_deny": {
            "label": "Deny Cookies",
            "help": "Disable cookie handling in requests"
        },
        "use_cache": {
            "label": "Use Cache",
            "help": "Enable response caching"
        },
        "custom_string_param": {
            "label": "Custom String Parameter",
            "help": "Custom string value for scenario"
        },
        "custom_digit_param": {
            "label": "Custom Digit Parameter",
            "help": "Custom numeric value for scenario"
        },
        "TEST_PAYLOAD":{
            "label": "useTestPayloads",
            "help": "the payloads that includes parameters, to filter them before 3rd party"
        },
        "testBoolean":{
            "label": "Custom test boolean",
            "help": "the payloads that includes parameters, to filter them before 3rd party"
        }
    }
}